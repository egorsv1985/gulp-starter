{
  "tagname-lowercase": true,               // Правило: Теги HTML должны быть в нижнем регистре
  "attr-lowercase": true,                   // Правило: Атрибуты HTML должны быть в нижнем регистре
  "attr-value-double-quotes": true,         // Правило: Значения атрибутов должны быть в двойных кавычках
  "doctype-first": false,                   // Правило: Doctype должен быть указан в самом начале HTML-файла (необязательное правило, отключено)
  "doctype-html5": true,                    // Правило: Doctype должен быть HTML5
  "id-unique": true,                        // Правило: ID элементов должны быть уникальными
  "head-script-disabled": false,             // Правило: Внутри <head> тега не должно быть JavaScript-кода
  "style-disabled": false                   // Правило: Не допускается использование встроенных стилей в HTML (необязательное правило, отключено)
}
